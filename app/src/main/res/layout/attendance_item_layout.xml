<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
  >

     <LinearLayout
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:background="@drawable/attendance_selector"
                android:orientation="horizontal"
                android:gravity="left|center"
                android:padding="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/TextViewController_StudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mr.Om Patel"
                    android:textColor="#333"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:layout_marginLeft="45dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"
                    android:button="@drawable/apptheme_btn_radio_holo_dark"
                    android:checked="true"
                    android:layout_gravity="center" />

                <!--   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/radioButton2"
                       android:checked="true"
                       android:button="@drawable/apptheme_btn_radio_holo_dark" />-->

            </LinearLayout>

            <!--<ImageView
                android:id="@+id/imageViewq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_student_default"
                android:layout_marginLeft="5dp" />-->
            <org.mdcconcepts.kidsi.teacher.teacherapplication.customitems.CircularImageView
                android:id="@+id/imageViewController_ProfilePic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_student_default"
                app:border="true"
                app:border_color="#7f7f7f"
                app:border_width="2dp"
                />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
