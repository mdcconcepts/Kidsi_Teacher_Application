<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/ic_attendance_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="01"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageViewController_SchoolLogo"
            android:clickable="true"
            android:src="@drawable/ic_mdc_school_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_Dynamic"
        android:background="@drawable/home_fragment_bg_selector"
        android:baselineAligned="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="4"

            android:id="@+id/LinearLayout_One"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:visibility="visible"
                >

                <ImageView
                    android:id="@+id/ImageViewController_Attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/attendance_menu_selector"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Attendance"
                    android:id="@+id/TextViewController_Attendance"
                    android:layout_weight="1.8"

                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <ImageView
                android:layout_width="3dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView6"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/vertical_divider"
                android:alpha="0.2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <ImageView
                    android:id="@+id/ImageViewController_Progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_menu_selector"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="35dp"
                    android:clickable="true"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Progress"
                    android:id="@+id/TextViewController_Progress"
                    android:layout_weight="1.8"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout_Divider"
            android:visibility="invisible">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/imageView8"
                android:src="@drawable/horizontal_divider"
                android:rotation="180"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:alpha="0.2" />

         <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/imageView7"
            android:src="@drawable/horizontal_divider"
            android:rotation="180"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:alpha="0.2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/LinearLayout_Two">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageViewController_Sticker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/sticker_menu_selector"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="35dp"
                android:clickable="true"
                android:layout_gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Sticker Market"
                    android:id="@+id/TextViewController_Sticker"
                    android:layout_weight="1.8"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <ImageView
                android:layout_width="3dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView61"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/vertical_divider"
                android:alpha="0.2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageViewController_Chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/chat_menu_selector"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="35dp"
                    android:clickable="true"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Chat"
                    android:id="@+id/TextViewController_Chat"
                    android:layout_weight="1.8"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
